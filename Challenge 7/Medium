class Medium {
  static void Main() {
    Console.WriteLine("Bir sayi giriniz:");
    int sayi = Convert.ToInt16(Console.ReadLine());
    
    int toplam = 0;

    while (sayi > 0)
    {
        int basamak = sayi % 10;
        toplam += basamak;
        sayi /= 10;
    }
    
    Console.WriteLine($"Sayinin basamaklari toplami: {toplam}");
  }

}
